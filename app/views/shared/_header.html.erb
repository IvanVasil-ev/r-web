<header class="w-full bg-white border-b h-[48px]">
  <div data-controller="dropdown" class="container mx-auto h-full px-[20px] lg:max-w-[970px] flex align-middle">
    <div class="flex-1 flex items-center">
      <%= link_to root_path, class: 'flex items-center h-full mr-5' do %>
        <%= image_tag asset_path('favicon.png'), class: "h-[28px]" %>
        <span class="ml-[10px]">RWeb</span>
      <% end %>
      <div class="w-full h-full items-center py-[8px] max-w-[220px] hidden sm:flex">
        <div class="h-full w-full px-2 bg-gray-300 flex items-center justify-between rounded-md">
          <svg class="h-[18px] w-[18px] mr-2" fill="none" viewBox="0 0 24 24" stroke="#00000050" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          <input type="text" placeholder="Search" class=" flex-1 bg-transparent outline-0 placeholder:text-sm text-[14px] caret-gray-500 text-gray-800">
        </div>
      </div>
    </div>
    <% if @current_user %>
      <div data-action="click->dropdown#toggle" data-type="menu" class="cursor-pointer flex w-[70px] items-center justify-center hover:bg-gray-300 relative">
        <%= image_tag asset_path('avatar-thumbnail.png'), class: 'rounded-full h-[32px] w-[32px]', 'data-type': 'menu'  %>
        <%= image_tag asset_path('arrow-down.png'), class: "w-[12px] ml-2 mt-[5px]", 'data-type': 'menu' %>
        <!-- Dropdown menu -->
        <%= render 'shared/dropdown_menu' %>
      </div>
    <% else %>
      <div class="flex items-center justify-between">
        <%= link_to 'Login', login_path,
          class: 'h-[35px] leading-[35px] bg-transparent hover:bg-blue-600 active:bg-blue-700 text-blue-600 font-semibold hover:text-white px-4 border border-blue-500 hover:border-transparent rounded mr-4' %>
        <%= link_to 'Sing Up', sign_up_path,
          class: 'h-[35px] leading-[35px] bg-blue-500 hover:bg-blue-600 active:bg-blue-700 text-white text-sm font-semibold px-3 rounded align-center' %>
      </div>
    <% end %>
  </div>
</header>